<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.example</groupId>
  <artifactId>demoloterie</artifactId>
  <version>1.0.0</version>
  <build>
    <finalName>demoloterie</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <release>${java.version}</release>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>${javafx.maven.plugin.version}</version>
        <configuration>
          <mainClass>org.example.Launcher</mainClass>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>org.example.Launcher</mainClass>
                </transformer>
                <transformer />
              </transformers>
              <minimizeJar>false</minimizeJar>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>windows-installer</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.panteleyev</groupId>
            <artifactId>jpackage-maven-plugin</artifactId>
            <version>1.7.1</version>
            <executions>
              <execution>
                <id>create-windows-installer</id>
                <phase>package</phase>
                <goals>
                  <goal>jpackage</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <input>${project.build.directory}</input>
              <destination>${project.build.directory}/installer</destination>
              <name>DemoLoterie</name>
              <appVersion>${project.version}</appVersion>
              <vendor>DemoLoterie</vendor>
              <type>${jpackage.imageType}</type>
              <mainJar>${project.build.finalName}.jar</mainJar>
              <mainClass>org.example.Launcher</mainClass>
              <winMenu>${jpackage.winMenu}</winMenu>
              <winShortcut>${jpackage.winShortcut}</winShortcut>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <properties>
    <javafx.platform>win</javafx.platform>
    <jpackage.winMenu>false</jpackage.winMenu>
    <java.version>21</java.version>
    <javafx.maven.plugin.version>0.0.8</javafx.maven.plugin.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <javafx.version>21.0.2</javafx.version>
    <jpackage.imageType>APP_IMAGE</jpackage.imageType>
    <jpackage.winShortcut>false</jpackage.winShortcut>
  </properties>
</project>
